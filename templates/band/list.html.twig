{% extends 'base.html.twig' %}

{% block title %}Page des Groupes{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Liste des groupes :</h1>
        <br>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">Groupe</th>
                    <th scope="col">Détails</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>

            <tbody>
                {% for groupe in listBand %}
                    <tr>
                        <td>{{ groupe.getName() }}</td>
                        <td><a class="btn btn-primary" href="{{ path('band_show', {id: groupe.getId()}) }}">Détails du groupe</a></td>
                        <td>
                            <a class="btn btn-warning" href="{{ path('band_edit', {id: groupe.getId()}) }}">Modifier</a>
                            <a class="btn btn-danger" href="{{ path('band_delete', {id: groupe.getId()}) }}">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <div>
            <a class="btn btn-primary" href="{{ path('band_create') }}">Créer un nouveau groupe</a>
        </div>
    </div>
{% endblock %}