{% extends 'base.html.twig' %}

{% block title %}Page des Membres{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Liste des membres :</h1>
        <br>
        <table class="table table-bordered">
            <thead>
            <tr>
                <th scope="col">Prénom</th>
                <th scope="col">Nom</th>
                <th scope="col">Email</th>
                <th scope="col">Date de naissance</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>

            <tbody>
            {% for artist in listArtist %}
                <tr>
                    <td>{{ artist.getFirstName() }}</td>
                    <td>{{ artist.getLastName() }}</td>
                    <td>{{ artist.getMail() }}</td>
                    <td>{{ artist.getDateOfBirth().format('d/m/Y') }}</td>
                    <td>
                        <a class="btn btn-warning" href="{{ path('artist_edit', {id: artist.getId()}) }}">Modifier</a>
                        <a class="btn btn-danger" href="{{ path('artist_delete', {id: artist.getId()}) }}">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div>
            <a class="btn btn-primary" href="{{ path('artist_create') }}">Créer un nouveau membre</a>
        </div>
    </div>
{% endblock %}